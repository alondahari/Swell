.row
	.col-xs-10.col-xs-offset-1.rating-field
		h2.rating-header #{field.header}
		h2.rating-display
			span.rating-value= field.average
			//- add space between value and unit
			| 
			| #{field.unit}

		if field.time
			p.rating-info Last Updated #{field.time}
			p.rating-info #{field.numberOfVotes} vote#{(field.numberOfVotes > 1 ? 's' : '')} in the last #{user.attributes.ignoreRating} hours
		else
			p.rating-info No Recent Updates
.row
	.col-xs-10.col-xs-offset-1
		hr.rating-seperator
